{
  "manifest_version": 3,
  "name": "NotionRoll",
  "version": "1.0.1",
  "description": "A Chrome extension that adds a button to Notion tables allowing selection of a random line",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "scripting"
  ],
  "host_permissions": [
    "https://www.notion.so/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "NotionRoll",
    "default_popup": "popup.html"
  }
}
